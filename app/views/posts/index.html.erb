<h2 class="mt-4" style="text-align: center;">査定リスト</h2>
<div class="posts-wrapper">
  <div class='posts-list'>
    <table class="table table-hover boards__table">
      <thead class="thead">
        <tr>
          <th>査定No</th>
          <th>顧客氏名</th>
          <th>メールアドレス</th>
          <th>駐車場住所</th>
          <th>駐車場運営の有無</th>
          <th>1ヶ月賃料</th>
          <th>駐車可能台数</th>
          <th>その他特記事項(顧客用)</th>
          <th>その他特記事項(社員用)</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.client_name %></td>
            <td><%= post.email %></td>
            <td><%= post.parking_address %></td>
            <td><%= post.parking_present? ? 'あり ' : 'なし ' %></td>
            <td><%= post.rent %></td>
            <td><%= post.parking_possible_number %></td>
            <td><%= post.client_textarea %></td>
            <td><%= post.user_textarea %></td>
            <td>
            <%= link_to '編集', edit_post_path(post), class: 'btn btn-info' %>
            <%= link_to '削除', posts_path(post), method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>